<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="1"
    android:rowCount="7" >

    <TextView
        android:id="@+id/textView1"
        android:layout_row="0"
        android:layout_column="0"
        android:padding="20dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:textSize="40sp"
        android:textStyle="bold"
        android:text="@string/app_name" />

    <TextView
        android:id="@+id/textView2"
        android:layout_row="1"
        android:layout_column="0"
        android:padding="10dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:textSize="20sp"
        android:text="Emission et réception de message audio en morse." />

    <Button
        android:id="@+id/bt_emetteur"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal|center_vertical"
    	android:layout_width="match_parent"
   		android:layout_height="wrap_content"
        android:text="Emetteur" />

    <Button
        android:id="@+id/bt_recepteur"
		android:layout_row="3"
        android:layout_column="0"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal|center_vertical"
    	android:layout_width="match_parent"
   		android:layout_height="wrap_content"
        android:text="Recepteur" />
	
    <Button
        android:id="@+id/bt_parametres"
		android:layout_row="4"
        android:layout_column="0"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal|center_vertical"
    	android:layout_width="match_parent"
   		android:layout_height="wrap_content"
        android:text="Paramètres" />
    
    <Button
        android:id="@+id/bt_quitter"
		android:layout_row="5"
        android:layout_column="0"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal|center_vertical"
    	android:layout_width="match_parent"
   		android:layout_height="wrap_content"
        android:text="Quitter" />

</GridLayout>